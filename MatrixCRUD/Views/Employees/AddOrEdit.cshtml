@model MatrixCRUD.Models.Employee

@{
    ViewData["Title"] = "Cadastro";
}


<h1>Cadastro</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-row d-flex justify-content-between">
                <div class="form-group col-md-5" >
                    <label asp-for="EmpCode" class="control-label"></label>
                    <input asp-for="EmpCode" class="form-control" />
                    <span asp-validation-for="EmpCode" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="Position" class="control-label"></label>
                    <select asp-for="Position" class="form-control">
                        <option value="">Selecione o cargo</option>
                        <option value="Estagiário">Estagiário</option>
                        <option value="Analista Júnior">Analista Júnior</option>
                        <option value="Analista Pleno">Analista Pleno</option>
                        <option value="Analista Sênior">Analista Sênior</option>
                    </select>
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="OfficeLocation" class="control-label"></label>
                <input asp-for="OfficeLocation" class="form-control" />
                <span asp-validation-for="OfficeLocation" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-row mt-2 d-flex justify-content-between ">
                <div class="form-group col-md-2">
                    <input type="submit" value="Salvar" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-10">
                    <a asp-action="Index" class="btn btn-secondary btn-block">Voltar</a>
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}